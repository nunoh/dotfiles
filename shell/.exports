export EDITOR='vim'

export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"

# so that colors still work when piping to less for example
export CLICOLOR_FORCE=1

export TERM=xterm-256color

# so that lag changing to vi mode is just 0.1 instead of the default 0.4 seconds
export KEYTIMEOUT=1

# install casks to sensible and predictable locations
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=238"

export GEM_HOME="$HOME/.gem"

# pipenv stuff
export PIPENV_DONT_LOAD_ENV=1 # don't load .env files
export PIPENV_PYTHON="$PYENV_ROOT/shims/python"
export PIPENV_VENV_IN_PROJECT=1 # venvs are placed into local .venv instead of home dir 

export HOMEBREW_NO_AUTO_UPDATE=1

export PYTHONBREAKPOINT='IPython.core.debugger.set_trace'
