[include]
	path = .gitconfig_user

[alias]
	s = status -s
	st = status
    # l = log --pretty=oneline --abbrev-commit
	l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pom = push origin master
	co = checkout
	b = branch

[color]
	ui = true

[credential]
	helper = osxkeychain

[push]
	default = simple

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

; so that git status has pager too
[pager]
	status = true

[core]
	autocrlf = input
	excludesfile = /Users/Nuno/.gitignore_global
	editor = vim

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[user]
	name = Nuno Hespanhol
	email = nuno.hespanhol@gmail.com
[hub]
	protocol = https
[github]
	user = nunoh
